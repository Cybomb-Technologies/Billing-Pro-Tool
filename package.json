{
  "name": "billing-app-frontend",
  "version": "1.0.0",
  "type": "module",

  "main": "electron/main.cjs",

  "scripts": {
    "dev": "vite --port 5173",
    "src-start": "vite --port 5173",
    "electron-start": "wait-on http://localhost:5173 && electron ./electron/main.cjs",
    "start": "concurrently \"npm:src-start\" \"npm:electron-start\"",
    "build-frontend": "vite build",
    "dist": "npm run build-frontend && electron-builder",
    "dist:clientA": "BRAND=clientA npm run dist",
    "dist:clientB": "BRAND=clientB npm run dist"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-regular-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.0",
    "axios": "^1.5.0",
    "bootstrap": "^5.3.0",
    "chart.js": "^4.5.0",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "fontawesome-free": "^1.0.4",
    "keytar": "^7.9.0",
    "lucide-react": "^0.544.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.7",
    "react": "^18.2.0",
    "react-bootstrap": "^2.8.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-router-bootstrap": "^0.26.3",
    "react-router-dom": "^6.15.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^9.2.1",
    "electron": "^39.2.0",
    "electron-builder": "^26.0.12",
    "vite": "^7.1.7",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.billing.app",
    "productName": "Billing Book",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/logo.png"
    }
  }
}
